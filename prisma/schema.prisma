// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Philosopher {
  id     Int              @id
  name   String
  quotes Quote[]
  eras   PhilosopherEra[]
}

model Quote {
  id       Int          @id
  authorid Int?
  author   Philosopher? @relation(fields: [authorid], references: [id])
  text     String
  eras     QuoteEra[]
}

model Era {
  id           Int              @id
  era          String
  philosophers PhilosopherEra[]
  quotes       QuoteEra[]
}

model PhilosopherEra {
  philosopherid Int
  eraid         Int
  Philosopher   Philosopher @relation(fields: [philosopherid], references: [id])
  Era           Era         @relation(fields: [eraid], references: [id])

  @@id([philosopherid, eraid])
}

model QuoteEra {
  quoteid Int
  eraid   Int
  Quote   Quote @relation(fields: [quoteid], references: [id])
  Era     Era   @relation(fields: [eraid], references: [id])

  @@id([quoteid, eraid])
}
